alias v='vim'
alias sz='exec zsh'

# python
alias python='python3'
alias pipu="pip freeze | cut -d'=' -f1 | xargs -n1 pip install -U"
alias req='pip freeze > requirements.txt'
alias act='source .venv/bin/activate'

# yadm
alias y='yadm'
alias ys='y status'
alias yd='y diff'
alias yp='y pull'
function yy() {
    yp
    y add -u
    ys
    echo "enter commit message:"
    read commit_msg
    y commit -m "$commit_msg" && y push
}

# tmux
alias tml='tmux list'
alias a='attach'
# new named session
new() {
    if [ -z "$1" ]; then
        echo 'specify session name'
    else
        tmux new -s "$1"
    fi
}
# attach session
attach() {
    if [ -z "$1" ]; then
        echo 'specify session name'
    else
        tmux attach -d -t "$1"
    fi
}
# kill session
tmk() {
    if [ -z "$1" ]; then
        echo 'specify session name'
    else
        tmux kill-session -t "$1"
    fi
}
# kill server
tmks() {
    tmux kill-server
}

# nav
alias l='ls'
alias ll='ls -ltA'
alias h='cd ~'
alias desk='cd ~/Desktop'
alias g='cd ~/git'
alias mnt='mount | grep -E ^/dev | column -t'
alias path='echo -e ${PATH//:/\\n}'
alias env="env | sort | awk -F= '{printf \"%-30s %s\n\", \$1, \$2}'"

# [b]ack [n] directories
alias b='b() { cd $(printf "%0.s../" $(seq 1 ${1:-1})); } && b'

# always ls after cd
alias cd='cd() { builtin cd "${1:-..}" && ls; }; cd'
alias d='cd'

# bat
alias cat='bat'

# ripgrep config files
alias rgc="yadm list | grep '^\.' | xargs rg"

