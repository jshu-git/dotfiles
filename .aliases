# yadm
alias y='yadm'
alias ys='y status'
alias yd='y diff'
alias yp='y pull'
function yy() {
    yp
    y add -u
    ys
    echo "enter commit message:"
    read commit_msg
    y commit -m "$commit_msg" && y push
}

# tmux
alias tm='tmux'
alias a='attach'
# new named session
function new() {
    if [ -z "$1" ]; then
        echo 'specify session name'
    else
        tm new -s "$1"
    fi
}
# attach session
function attach() {
    if [ -z "$1" ]; then
        echo 'specify session name'
    else
        tm attach -d -t "$1"
    fi
}
# kill session
function tmk() {
    if [ -z "$1" ]; then
        echo 'specify session name'
    else
        tm kill-session -t "$1"
    fi
}

