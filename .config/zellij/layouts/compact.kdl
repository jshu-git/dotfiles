// https://github.com/zellij-org/zellij/blob/main/zellij-utils/assets/layouts/compact.kdl
layout {
    tab hide_floating_panes=false {
        pane
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
        floating_panes {
            pane {
                x      "5%"
                y      "5%"
                width  "90%"
                height "90%"
            }
        }
    }
}
