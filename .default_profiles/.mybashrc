export BASH_SILENCE_DEPRECATION_WARNING=1
export PATH="/usr/local/opt/python/libexec/bin:$PATH"

# prompt
PROMPT_DIRTRIM=3
PS1="\[\D{%m-%d %H:%M:%S} \e[1;36m\][\u@\h \w]\$\[\e[0m\]\n"
if [ $(whoami) == 'root' ]
then
	PS1="\[\e[1;31m\][\u@\h \w]\$\[\e[0m\] "
fi

# ls dir color
LS_COLORS='di=1;34'
export LS_COLORS

###########
# aliases #
###########

# nav
alias ll='func_ll'
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias cc='func_cc'
alias h='cc ~'

# vim bash
alias v='vim'
alias vb='vim ~/.bashrc'
alias sb='source ~/.bashrc'
alias vimrc='vi ~/.vimrc'
alias tmrc='vi ~/.tmux.conf'

# tm
alias tm='tmux'
alias a='attach'

# python
alias pip-upgrade="pip freeze | cut -d'=' -f1 | xargs -n1 pip install -U"
alias act='source .venv/bin/activate'

# tmux attach session
attach() {
  if [ "$#" -eq  "0" ]
  then
      echo "Provide a valid tmux session"
  else
      tm attach -t "$1"
  fi
}

# tmux new named session
new() {
  if [ "$#" -eq  "0" ]
  then
     echo "think of a session name"
  else
      tm new -s "$1"
  fi
}

# recursive grep
gr() {
    if [ "$#" -eq  "0" ]
    then
       echo "Provide a string to grep"
    else
       grep -nr "$*" .
    fi
}

# used for cc
func_cc() { ## executes an ls after cd.  cd with no arg is cd ..
   if [ -z "$@" ]  # If we did not pass a parameter
   then
     cd .. && ll
   else  # If we did pass a parameter
      cd "$@" && ll
  fi
}

func_ll() { ## executes an ls after cd.  cd with no arg is cd ..
   if [ -z "$@" ]  # If we did not pass a parameter
   then
     ls -alht --color=tty && pwd
   else  # If we did pass a parameter
      ls -alht --color=tty "$@"
  fi
}

